{
  "name": "opencode-workflow-kit",
  "version": "0.5.0",
  "description": "A specialized agent suite and automation framework for AI-driven development workflows",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "format": "turbo run format",
    "clean": "turbo run clean && rm -rf node_modules",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "turbo run build --filter=!@opencode/docs && changeset publish",
    "publish": "changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "turbo": "^2.0.14",
    "typescript": "^5.5.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@10.24.0",
  "workspaces": [
    "packages/*"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/pwarnock/opencode-workflow-kit.git"
  },
  "keywords": [
    "ai",
    "automation",
    "workflow",
    "agents",
    "cody",
    "beads",
    "development"
  ],
  "author": "OpenCode Workflow Kit Contributors",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pwarnock/opencode-workflow-kit/issues"
  },
  "homepage": "https://github.com/pwarnock/opencode-workflow-kit#readme"
}