{
  "name": "@pwarnock/liaison",
  "version": "1.0.0",
  "description": "Liaison - CLI framework for Liaison Toolkit with plugin architecture",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "liaison": "dist/cli.js"
  },
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:unit": "vitest run",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src/**/*.ts",
    "type-check": "tsc --noEmit",
    "start": "node dist/cli.js"
  },
  "dependencies": {
    "commander": "^11.1.0",
    "inquirer": "^9.2.12",
    "ora": "^7.0.1",
    "chalk": "^5.3.0",
    "@pwarnock/toolkit-core": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^22.4.0",
    "@types/inquirer": "^9.0.7",
    "typescript": "^5.5.3",
    "vitest": "^2.0.0",
    "eslint": "^9.39.1",
    "@typescript-eslint/parser": "^7.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0"
  },
  "keywords": [
    "cli",
    "liaison",
    "workflow",
    "automation",
    "plugin",
    "toolkit"
  ],
  "author": "Liaison Toolkit Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/pwarnock/liaison-toolkit.git",
    "directory": "packages/liaison"
  },
  "bugs": {
    "url": "https://github.com/pwarnock/liaison-toolkit/issues"
  },
  "homepage": "https://github.com/pwarnock/liaison-toolkit#readme"
