{
  "name": "@pwarnock/liaison",
  "version": "0.5.4",
  "description": "Seamless integration between Cody Product Builder Toolkit and Beads for AI-driven development workflows",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "codybeads": "./bin/cody-beads.js"
  },
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:unit": "vitest run",
    "test:integration": "vitest run --config=vitest.integration.config.ts",
    "test:e2e": "playwright test",
    "test:bdd": "cucumber-js",
    "test:a11y": "pa11y-ci",
    "test:security": "snyk test && audit-ci --moderate",
    "test:mutation": "stryker run",
    "test:performance": "lighthouse-ci",
    "test:all": "bun run test:unit && bun run test:integration && bun run test:e2e && bun run test:bdd && bun run test:a11y && bun run test:security",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "pre-commit": "lint-staged && bun run test:unit && bun run type-check",
    "ci": "bun run lint && bun run test:all && bun run build",
    "sonar": "sonar-scanner",
    "coverage:report": "codecov",
    "mutate": "stryker run"
  },
  "files": [
    "dist/**/*",
    "bin/**/*",
    "templates/**/*",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "cody",
    "beads",
    "integration",
    "ai",
    "development",
    "workflow",
    "cli",
    "sync"
  ],
  "author": "OpenCode Workflow Kit Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/pwarnock/opencode-workflow-kit.git",
    "directory": "packages/liaison"
  },
  "bugs": {
    "url": "https://github.com/pwarnock/opencode-workflow-kit/issues"
  },
  "homepage": "https://github.com/pwarnock/opencode-workflow-kit/tree/main/packages/liaison#readme",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/",
    "access": "public"
  },
  "dependencies": {
    "@octokit/rest": "^22.0.1",
    "chalk": "^5.6.2",
    "commander": "^14.0.2",
    "dotenv": "^17.2.3",
    "esbuild": "^0.27.1",
    "fs-extra": "^11.3.2",
    "glob": "^13.0.0",
    "inquirer": "^13.0.2",
    "js-yaml": "^4.1.1",
    "node-forge": "^1.3.3",
    "ora": "^9.0.0",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.3",
    "semver": "^7.7.3",
    "yaml": "^2.8.2",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "@types/inquirer": "^9.0.9",
    "@types/fs-extra": "^11.0.4",
    "@types/semver": "^7.7.1",
    "@typescript-eslint/eslint-plugin": "^8.48.1",
    "@typescript-eslint/parser": "^8.48.1",
    "@vitest/ui": "^4.0.15",
    "@vitest/coverage-v8": "^4.0.15",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.7.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "vitest": "^4.0.15",
    "@cucumber/cucumber": "^12.3.0",
    "@playwright/test": "^1.57.0",
    "@axe-core/playwright": "^4.11.0",
    "axios": "^1.13.2",
    "nock": "^14.0.10",
    "supertest": "^7.1.4",
    "testcontainers": "^11.9.0",
    "husky": "^9.1.7",
    "@stryker-mutator/core": "^9.4.0",
    "@stryker-mutator/vitest-runner": "^9.4.0",
    "@stryker-mutator/typescript-checker": "^9.4.0",
    "sonarqube-scanner": "^4.3.2",
    "nyc": "^17.1.0",
    "c8": "^10.1.3",
    "codecov": "^3.8.3",
    "pa11y-ci": "^4.0.1",
    "snyk": "^1.1301.0",
    "audit-ci": "^7.1.0"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": [
      "eslint --fix",
      "prettier --write",
      "vitest run --bail --findRelatedTests --passWithNoTests"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.0.0"
  }
}