{
  "name": "@pwarnock/liaison",
  "version": "0.7.0",
  "description": "Seamless integration between Cody Product Builder Toolkit and Beads for AI-driven development workflows",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "liaison": "./bin/liaison.js",
    "codybeads": "./bin/liaison.js"
  },
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:unit": "vitest run",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "pre-commit": "lint-staged && bun run test:unit && bun run type-check",
    "ci": "bun run lint && bun run test:unit && bun run build"
  },
  "files": [
    "dist/**/*",
    "bin/**/*",
    "templates/**/*",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "cody",
    "beads",
    "integration",
    "ai",
    "development",
    "workflow",
    "cli",
    "sync"
  ],
  "author": "OpenCode Workflow Kit Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pwarnock/opencode-workflow-kit.git",
    "directory": "packages/liaison"
  },
  "bugs": {
    "url": "https://github.com/pwarnock/opencode-workflow-kit/issues"
  },
  "homepage": "https://github.com/pwarnock/opencode-workflow-kit/tree/main/packages/liaison#readme",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/",
    "access": "public"
  },
  "dependencies": {
    "@octokit/rest": "^22.0.1",
    "chalk": "^5.6.2",
    "commander": "^14.0.2",
    "dotenv": "^17.2.3",
    "esbuild": "^0.27.1",
    "fs-extra": "^11.3.2",
    "glob": "^13.0.0",
    "inquirer": "^13.0.2",
    "js-yaml": "^4.1.1",
    "node-forge": "^1.3.3",
    "ora": "^9.0.0",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.3",
    "semver": "^7.7.3",
    "yaml": "^2.8.2",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@types/node": "^24.10.2",
    "@types/inquirer": "^9.0.9",
    "@types/fs-extra": "^11.0.4",
    "@typescript-eslint/eslint-plugin": "^8.49.0",
    "@typescript-eslint/parser": "^8.49.0",
    "@vitest/coverage-v8": "^4.0.15",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.7.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "vitest": "^4.0.15"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": [
      "eslint --fix",
      "prettier --write",
      "vitest run --bail --findRelatedTests --passWithNoTests"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.0.0"
  }
}