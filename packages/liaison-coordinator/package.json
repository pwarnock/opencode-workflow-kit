{
  "name": "@pwarnock/liaison-coordinator",
  "version": "0.7.2",
  "description": "Bidirectional sync plugin for Liaison Toolkit - orchestrates Cody and Beads integration",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "dev:hot": "bun run dev-server.ts",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:unit": "vitest run",
    "test:security": "bun audit",
    "test:report": "bun run test:coverage && bun run scripts/test-report-generator.ts",
    "test:analyze": "bun run test:coverage && bun run scripts/test-coverage-analyzer.ts",
    "test:performance": "bun run scripts/performance-benchmarks.ts",
    "test:accessibility": "bun run scripts/accessibility-tests.ts",
    "test:full": "bun run test:coverage && bun run test:report && bun run test:performance && bun run test:accessibility",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "cache:status": "bun run liaison cache status",
    "cache:clear": "bun run liaison cache clear",
    "cache:warm": "bun run liaison cache warm --all",
    "cache:benchmark": "bun run liaison cache benchmark",
    "test:mutation": "bun run scripts/simple-mutation-tester.ts",
    "test:quality": "bun run test:coverage && bun run test:report",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "pre-commit": "lint-staged && bun run test:unit && bun run type-check",
    "ci": "bun run lint && bun run test:unit && bun run build"
  },
  "files": [
    "dist/**/*",
    "bin/**/*",
    "templates/**/*",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "cody",
    "beads",
    "integration",
    "ai",
    "development",
    "workflow",
    "cli",
    "sync"
  ],
  "author": "Liaison Toolkit Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/pwarnock/liaison-toolkit.git",
    "directory": "packages/liaison-coordinator"
  },
  "bugs": {
    "url": "https://github.com/pwarnock/liaison-toolkit/issues"
  },
  "homepage": "https://github.com/pwarnock/liaison-toolkit/tree/main/packages/liaison-coordinator#readme",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/",
    "access": "public"
  },
  "dependencies": {
    "@octokit/rest": "^22.0.1",
    "chalk": "^5.6.2",
    "chokidar": "^3.6.0",
    "commander": "^14.0.2",
    "console-table-printer": "^2.15.0",
    "dotenv": "^17.2.3",
    "esbuild": "^0.26.0",
    "fs-extra": "^11.3.2",
    "glob": "^13.0.0",
    "inquirer": "^13.0.2",
    "js-yaml": "^4.1.0",
    "node-forge": "^1.3.3",
    "ora": "^9.0.0",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.3",
    "semver": "^7.7.3",
    "yaml": "^2.8.2",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.9",
    "@types/node": "^24.10.2",
    "@typescript-eslint/eslint-plugin": "^8.49.0",
    "@typescript-eslint/parser": "^8.49.0",
    "@vitest/coverage-v8": "^4.0.15",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.7.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "vitest": "^4.0.15"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": [
      "eslint --fix",
      "prettier --write",
      "vitest run --bail --findRelatedTests --passWithNoTests"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
