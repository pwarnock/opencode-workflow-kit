# BD (beads) Issue Tracker Commands
# This file contains all bd-related commands with proper syntax

# Setup bd (beads) issue tracker
bd-setup:
    #!/usr/bin/env sh
    echo "ğŸ“‹ Setting up bd (beads) issue tracker..."
    @if [ -f "scripts/setup-bd.sh" ]; then
        ./scripts/setup-bd.sh
    else
        echo "âš ï¸ bd setup script not found. Skipping bd setup."
    fi

# Check for ready work
bd-ready:
    #!/usr/bin/env sh
    echo "ğŸ“‹ Checking for ready work..."
    @./scripts/bd-wrapper.sh ready

# Create new bd issue
bd-create title type priority:
    #!/usr/bin/env sh
    echo "ğŸ“ Creating new bd issue..."
    @./scripts/bd-wrapper.sh create "$1" -t "$2" -p "$3"

# Update bd issue
bd-update id status:
    #!/usr/bin/env sh
    echo "ğŸ”„ Updating bd issue..."
    @./scripts/bd-wrapper.sh update "$1" --status "$2"

# Close bd issue
bd-close id reason:
    #!/usr/bin/env sh
    echo "âœ… Closing bd issue..."
    @./scripts/bd-wrapper.sh close "$1" --reason "$2"

# List all bd issues
bd-list:
    #!/usr/bin/env sh
    echo "ğŸ“‹ Listing all bd issues..."
    @./scripts/bd-wrapper.sh list

# Show bd issue details
bd-show id:
    #!/usr/bin/env sh
    echo "ğŸ“„ Showing bd issue details..."
    @./scripts/bd-wrapper.sh show "$1"