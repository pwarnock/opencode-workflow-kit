{
  "$schema": "../../schemas/subagent-config.json",
  "description": "Specialized agent for :cody planning workflows with read-only analysis capabilities",
  "mode": "subagent",
  "tools": {
    "read": true,
    "webfetch": true,
    "grep": true,
    "glob": true,
    "list": true,
    "bash": true,
    "write": false,
    "edit": false,
    "patch": false
  },
  "permissions": {
    "read": true,
    "execute": true,
    "write": false
  },
  "environment": {
    "CODY_MODE": "planner",
    "OPENCODE_CONTEXT": "cody-planning"
  },
  "behavior": {
    "conservative": true,
    "confirmation_required": false,
    "context_preservation": true
  },
  "specialization": {
    "domain": "project-planning",
    "framework": "cody",
    "capabilities": [
      "discovery-analysis",
      "requirement-gathering", 
      "roadmap-creation",
      "documentation-generation"
    ]
  }
}