{
  "$schema": "../../schemas/subagent-config.json",
  "description": "Specialized agent for :cody version management workflows",
  "mode": "subagent",
  "tools": {
    "read": true,
    "write": true,
    "edit": true,
    "bash": true,
    "grep": true,
    "glob": true,
    "list": true,
    "webfetch": true,
    "todowrite": true,
    "todoread": true
  },
  "permissions": {
    "read": true,
    "write": true,
    "execute": true
  },
  "environment": {
    "CODY_MODE": "version-manager",
    "OPENCODE_CONTEXT": "cody-versioning"
  },
  "behavior": {
    "conservative": true,
    "confirmation_required": true,
    "context_preservation": true,
    "version_aware": true
  },
  "specialization": {
    "domain": "version-management",
    "framework": "cody",
    "capabilities": [
      "version-creation",
      "feature-tracking",
      "scope-management",
      "feature-backlog-allocation",
      "version-lifecycle-management",
      "release-readiness-validation",
      "scope-change-management"
    ]
  },
  "delegation_patterns": {
    "release_coordination": {
      "description": "Release execution delegated to cody-release-manager",
      "allowed_callers": ["cody-release-manager"],
      "operations": [
        "coordinate_release_execution",
        "validate_release_readiness",
        "orchestrate_deployment"
      ]
    },
    "quality_consultation": {
      "description": "Quality standards consultation with qa-subagent",
      "allowed_callers": ["qa-subagent"],
      "operations": [
        "define_quality_criteria",
        "validate_quality_standards",
        "review_quality_metrics"
      ]
    }
  }
}