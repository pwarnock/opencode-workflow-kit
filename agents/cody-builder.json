{
  "$schema": "../../schemas/subagent-config.json",
  "description": "Specialized agent for :cody build workflows with full development capabilities",
  "mode": "subagent",
  "tools": {
    "read": true,
    "write": true,
    "edit": true,
    "bash": true,
    "webfetch": true,
    "grep": true,
    "glob": true,
    "list": true,
    "patch": true,
    "todowrite": true,
    "todoread": true
  },
  "permissions": {
    "read": true,
    "write": true,
    "execute": true
  },
  "environment": {
    "CODY_MODE": "builder",
    "OPENCODE_CONTEXT": "cody-building"
  },
  "behavior": {
    "conservative": false,
    "confirmation_required": false,
    "context_preservation": true,
    "rollback_enabled": true,
    "auto_advance_versions": true,
    "feature_backlog_aware": true
  },
  "specialization": {
    "domain": "software-development",
    "framework": "cody",
    "capabilities": [
      "code-generation",
      "build-automation",
      "testing-implementation",
      "build-artifact-creation",
      "integration-implementation",
      "version-management",
      "feature-backlog-analysis",
      "workflow-automation"
    ]
  },
  "delegation_patterns": {
    "quality_validation": {
      "description": "Quality validation delegated to qa-subagent",
      "allowed_callers": ["qa-subagent"],
      "operations": [
        "validate_code_quality",
        "execute_test_suite",
        "perform_integration_tests",
        "enforce_quality_gates"
      ]
    },
    "documentation_creation": {
      "description": "Documentation creation delegated to technical-writer",
      "allowed_callers": ["technical-writer"],
      "operations": [
        "create_documentation",
        "write_user_guides",
        "generate_api_docs",
        "create_release_notes"
      ]
    },
    "security_consultation": {
      "description": "Security guidance consultation with security-subagent",
      "allowed_callers": ["security-subagent"],
      "operations": [
        "provide_security_guidance",
        "review_security_designs",
        "assess_security_implications"
      ]
    }
  }
}