{
  "name": "python-development",
  "description": "Template for Python development projects with data science and web frameworks",
  "version": "1.0.0",
  "configurations": {
    "agents/default.json": {
      "$schema": "../../../schemas/agent-config.json",
      "version": "1.0.0",
      "name": "python-development",
      "description": "Python development configuration with data science and web framework support",
      "agent": {
        "name": "python-developer",
        "version": "1.0.0",
        "type": "development",
        "description": "Specialized for Python development workflows",
        "capabilities": [
          "python-development",
          "data-science",
          "web-frameworks",
          "testing",
          "package-management"
        ],
        "project_specific": false
      },
      "environment": {
        "shell": {
          "default": "bash",
          "windows": "powershell",
          "fallback": "sh"
        },
        "paths": {
          "config_dir": "~/.config/opencode",
          "cache_dir": "~/.cache/opencode",
          "log_dir": "~/.local/share/opencode/logs",
          "temp_dir": "/tmp"
        },
        "variables": {
          "PYTHONPATH": "./src",
          "PYTHON_ENV": "development"
        }
      },
      "behavior": {
        "auto_save": true,
        "backup_enabled": true,
        "confirm_destructive": true,
        "max_file_size": "10MB",
        "max_concurrent_operations": 5,
        "project_aware": true,
        "respect_gitignore": true,
        "scan_dependencies": true
      },
      "security": {
        "allow_file_system_access": true,
        "restricted_paths": [
          "~/.ssh",
          "/etc",
          "/usr/local/etc"
        ],
        "allowed_extensions": [
          ".py",
          ".pyx",
          ".pyi",
          ".ipynb",
          ".json",
          ".md",
          ".yml",
          ".yaml",
          ".toml",
          ".cfg",
          ".ini"
        ],
        "scan_for_secrets": true,
        "block_executable_files": false,
        "restrict_to_project": false,
        "block_node_modules": false,
        "block_build_artifacts": true
      },
      "platform_overrides": {
        "windows": {
          "environment": {
            "shell": {
              "default": "powershell"
            }
          }
        },
        "darwin": {
          "environment": {
            "variables": {
              "PYTHONPATH": "./src:/opt/homebrew/lib/python3/site-packages"
            }
          }
        },
        "linux": {
          "security": {
            "restricted_paths": [
              "~/.ssh",
              "/etc",
              "/usr/local/etc",
              "/var"
            ]
          }
        }
      }
    },
    "mcp/servers.json": {
      "$schema": "../../../schemas/mcp-servers.json",
      "version": "1.0.0",
      "name": "python-development-mcp",
      "description": "MCP servers configuration for Python development projects",
      "servers": {
        "filesystem": {
          "name": "filesystem",
          "description": "File system access for Python projects",
          "enabled": true,
          "command": ["uv", "run", "python", "-m", "mcp.server.filesystem", "/tmp"],
          "args": [],
          "timeout": 5000,
          "restart_on_failure": true,
          "max_restarts": 3
        },
        "git": {
          "name": "git",
          "description": "Git integration for version control",
          "enabled": true,
          "command": ["uv", "run", "python", "-m", "mcp.server.git", "--repository", "."],
          "args": [],
          "timeout": 10000,
          "restart_on_failure": true,
          "max_restarts": 3
        },
        "python-tools": {
          "name": "python-tools",
          "description": "Python-specific tools and analysis",
          "enabled": true,
          "command": ["uv", "run", "python", "-m", "mcp.server.python"],
          "args": [],
          "timeout": 15000,
          "restart_on_failure": true,
          "max_restarts": 3
        }
      },
      "global_settings": {
        "default_timeout": 10000,
        "max_concurrent_servers": 5,
        "auto_restart": true,
        "health_check_interval": 30000,
        "log_level": "info",
        "enable_metrics": false,
        "cache_responses": true,
        "cache_ttl": 300
      },
      "project_settings": {
        "auto_detect_servers": true,
        "respect_gitignore": true,
        "project_aware": true,
        "disable_external_servers": false,
        "enable_project_lsp": true
      }
    },
    "permissions/default.json": {
      "$schema": "../../../schemas/permissions.json",
      "version": "1.0.0",
      "name": "python-development-permissions",
      "description": "Permissions configuration for Python development projects",
      "permissions": {
        "file_system": {
          "read": {
            "allowed": true,
            "paths": {
              "include": [
                "./src/**",
                "./tests/**",
                "./docs/**",
                "./scripts/**",
                "./pyproject.toml",
                "./requirements*.txt",
                "./setup.py",
                "./Pipfile",
                "./poetry.lock"
              ],
              "exclude": [
                "./__pycache__/**",
                "./.pytest_cache/**",
                "./.mypy_cache/**",
                "./venv/**",
                "./.venv/**"
              ]
            },
            "extensions": {
              "include": [
                ".py",
                ".pyx",
                ".pyi",
                ".ipynb",
                ".json",
                ".md",
                ".yml",
                ".yaml",
                ".toml",
                ".cfg",
                ".ini"
              ],
              "exclude": [
                ".pyc",
                ".pyo",
                ".pyd",
                ".log"
              ]
            },
            "max_file_size": "10MB",
            "max_path_length": 255,
            "respect_gitignore": true
          },
          "write": {
            "allowed": true,
            "paths": {
              "include": [
                "./src/**",
                "./tests/**",
                "./docs/**",
                "./scripts/**"
              ],
              "exclude": [
                "./__pycache__/**",
                "./.pytest_cache/**",
                "./.mypy_cache/**",
                "./venv/**",
                "./.venv/**"
              ]
            },
            "extensions": {
              "include": [
                ".py",
                ".pyx",
                ".pyi",
                ".ipynb",
                ".json",
                ".md",
                ".yml",
                ".yaml",
                ".toml",
                ".cfg",
                ".ini"
              ],
              "exclude": [
                ".pyc",
                ".pyo",
                ".pyd"
              ]
            },
            "max_file_size": "10MB",
            "max_path_length": 255,
            "require_confirmation": false,
            "respect_gitignore": true
          },
          "execute": {
            "allowed": true,
            "paths": {
              "include": [
                "./scripts/**"
              ],
              "exclude": [
                "./__pycache__/**",
                "./.pytest_cache/**",
                "./.mypy_cache/**",
                "./venv/**",
                "./.venv/**"
              ]
            },
            "extensions": {
              "include": [
                ".py",
                ".sh"
              ],
              "exclude": []
            },
            "require_confirmation": true,
            "respect_gitignore": true
          }
        },
        "network": {
          "outbound": {
            "allowed": true,
            "protocols": ["http", "https"],
            "domains": {
              "allowlist": [
                "pypi.org",
                "github.com",
                "stackoverflow.com",
                "docs.python.org",
                "readthedocs.org",
                "test.pypi.org"
              ],
              "blocklist": []
            },
            "ports": [80, 443, 8000, 8080, 5000, 3000],
            "max_request_size": "10MB",
            "timeout": 30000,
            "require_confirmation": false
          },
          "inbound": {
            "allowed": false,
            "protocols": [],
            "domains": {
              "allowlist": [],
              "blocklist": []
            },
            "ports": [],
            "max_request_size": "1MB",
            "timeout": 5000,
            "require_confirmation": true
          }
        },
        "commands": {
          "allowed": [
            "python",
            "python3",
            "pip",
            "uv",
            "poetry",
            "pytest",
            "black",
            "ruff",
            "mypy",
            "jupyter",
            "git",
            "coverage",
            "sphinx"
          ],
          "blocked": [
            "rm",
            "sudo",
            "chmod",
            "chown"
          ]
        },
        "environment": {
          "read": true,
          "write": false,
          "restricted_vars": [
            "PASSWORD",
            "TOKEN",
            "SECRET",
            "KEY",
            "API_KEY"
          ]
        }
      }
    }
  }
}