{
  "$schema": "../../schemas/agent-config.json",
  "description": "General-purpose agent for :cody information and guidance workflows",
  "mode": "subagent",
  "tools": {
    "read": true,
    "webfetch": true,
    "grep": true,
    "glob": true,
    "list": true,
    "bash": true,
    "write": false,
    "edit": false
  },
  "permissions": {
    "read": true,
    "execute": true,
    "write": false
  },
  "environment": {
    "CODY_MODE": "general",
    "OPENCODE_CONTEXT": "cody-guidance"
  },
  "behavior": {
    "conservative": true,
    "confirmation_required": false,
    "context_preservation": false,
    "guidance_focused": true
  },
  "specialization": {
    "domain": "information-guidance",
    "framework": "cody",
    "capabilities": [
      "help-provision",
      "information-retrieval",
      "workflow-guidance",
      "best-practices",
      "troubleshooting-assistance"
    ]
  }
}