{
  "$schema": "../../schemas/mcp-servers.json",
  "version": "1.0.0",
  "name": "project-mcp-servers",
  "description": "Project-level MCP server configurations for beads integration",
  "inheritFromGlobal": true,
  "servers": {
    "beads": {
      "name": "beads",
      "description": "Beads task tracking and issue management server (project-local)",
      "enabled": true,
      "command": {
        "windows": ["cmd", "/c", "beads-mcp"],
        "darwin": ["beads-mcp"],
        "linux": ["beads-mcp"],
        "fallback": ["python", "-m", "beads_mcp"]
      },
      "args": ["--project-local", "--no-daemon", "--event-driven"],
      "env": {
        "BEADS_PROJECT_PATH": "${PWD:-.}",
        "BEADS_DATA_DIR": "./.beads",
        "BEADS_SYNC_MODE": "event-driven",
        "BEADS_AUTO_EXPORT": "true",
        "BEADS_EXPORT_INTERVAL": "5",
        "BEADS_GIT_INTEGRATION": "true",
        "BEADS_AUTO_COMMIT": "false"
      },
      "timeout": 30000,
      "restart_on_failure": true,
      "max_restarts": 3,
      "project_local": true,
      "privacy": {
        "data_sent": "issue metadata, task status, dependencies",
        "data_stored": "local JSONL file in .beads directory",
        "network_access": "none required for project-local mode",
        "opt_in_required": false
      },
      "integration": {
        "git_automation": {
          "enabled": true,
          "auto_sync": true,
          "commit_on_close": true,
          "sync_interval": 30
        },
        "cody_framework": {
          "enabled": true,
          "tasklist_sync": true,
          "bidirectional_sync": true,
          "version_mapping": true
        }
      }
    }
  },
  "global_settings": {
    "default_timeout": 30000,
    "max_concurrent_servers": 10,
    "auto_restart": true,
    "health_check_interval": 30000,
    "log_level": "info",
    "enable_metrics": true,
    "cache_responses": true,
    "cache_ttl": 300
  },
  "project_overrides": {
    "beads": {
      "env": {
        "BEADS_PROJECT_NAME": "${PROJECT_NAME:-opencode-config}",
        "BEADS_VERSION_TRACKING": "true",
        "BEADS_DEPENDENCY_VALIDATION": "true"
      }
    }
  },
  "metadata": {
    "created": "2025-01-24T00:00:00Z",
    "updated": "2025-01-24T00:00:00Z",
    "author": "opencode-config",
    "license": "MIT",
    "purpose": "beads-integration-v0.5.0"
  }
}