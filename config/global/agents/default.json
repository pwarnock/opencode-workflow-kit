{
  "$schema": "../../schemas/agent-config.json",
  "name": "default",
  "version": "1.0.0",
  "description": "Default agent configuration for general development tasks",
  "settings": {
    "maxTokens": 4000,
    "temperature": 0.7,
    "timeout": 120000,
    "tools": {
      "enabled": ["read", "write", "edit", "bash", "glob", "grep"],
      "disabled": []
    },
    "permissions": {
      "read": ["**/*"],
      "write": ["**/*"],
      "execute": ["*.sh", "*.py", "*.js", "*.ts"]
    }
  },
  "platform": {
    "windows": {
      "shell": "cmd",
      "pathSeparator": "\\"
    },
    "macos": {
      "shell": "zsh",
      "pathSeparator": "/"
    },
    "linux": {
      "shell": "bash",
      "pathSeparator": "/"
    }
  }
}