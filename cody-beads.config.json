{
  "version": "1.0.0",
  "github": {
    "owner": "pwarnock",
    "repo": "opencode-workflow-kit",
    "token": "${GITHUB_TOKEN}",
    "apiUrl": "https://api.github.com"
  },
  "cody": {
    "projectId": "opencode-workflow-kit",
    "apiUrl": "https://api.cody.ai"
  },
  "beads": {
    "projectPath": "./.beads",
    "configPath": ".beads/beads.json",
    "autoSync": false,
    "syncInterval": 60
  },
  "sync": {
    "defaultDirection": "bidirectional",
    "conflictResolution": "manual",
    "includeLabels": [
      "bug",
      "feature",
      "enhancement"
    ],
    "excludeLabels": [
      "wontfix",
      "duplicate"
    ],
    "preserveComments": true,
    "preserveLabels": true,
    "syncMilestones": false
  },
  "templates": {
    "defaultTemplate": "minimal",
    "templatePath": "./templates"
  }
}