{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://opencode.ai/schemas/project-config.json",
  "title": "Project Configuration Schema",
  "description": "Schema for opencode project configuration files",
  "type": "object",
  "required": [
    "version",
    "name",
    "type",
    "description",
    "settings"
  ],
  "properties": {
    "$schema": {
      "type": "string",
      "description": "JSON Schema reference"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Configuration version following semantic versioning"
    },
    "name": {
      "type": "string",
      "description": "Project name"
    },
    "type": {
      "type": "string",
      "enum": ["configuration", "template", "profile"],
      "description": "Configuration type"
    },
    "description": {
      "type": "string",
      "description": "Human-readable description of the configuration"
    },
    "inherits": {
      "type": "string",
      "description": "Path to parent configuration file to inherit from"
    },
    "settings": {
      "type": "object",
      "required": ["inheritFromGlobal"],
      "properties": {
        "inheritFromGlobal": {
          "type": "boolean",
          "description": "Whether to inherit from global configuration"
        },
        "overrideGlobal": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "List of configuration sections to override from global"
        },
        "configPaths": {
          "type": "object",
          "properties": {
            "agents": {
              "type": "string",
              "description": "Path to agent configurations"
            },
            "mcp": {
              "type": "string",
              "description": "Path to MCP server configurations"
            },
            "permissions": {
              "type": "string",
              "description": "Path to permission configurations"
            }
          }
        }
      }
    },
    "hooks": {
      "type": "object",
      "properties": {
        "beforeLoad": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Hooks to run before loading configuration"
        },
        "afterLoad": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Hooks to run after loading configuration"
        },
        "beforeSave": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Hooks to run before saving configuration"
        },
        "afterSave": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Hooks to run after saving configuration"
        }
      }
    },
    "metadata": {
      "type": "object",
      "properties": {
        "created": {
          "type": "string",
          "format": "date-time",
          "description": "Creation timestamp"
        },
        "updated": {
          "type": "string",
          "format": "date-time",
          "description": "Last update timestamp"
        },
        "author": {
          "type": "string",
          "description": "Configuration author"
        },
        "license": {
          "type": "string",
          "description": "License"
        },
        "project_scope": {
          "type": "boolean",
          "description": "Whether this is project-scoped"
        }
      }
    }
  }
}